    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cloudy"
        android:id="@+id/bef_connect"
        android:orientation="vertical"
        android:visibility="visible"
        ></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wallpaper_t"
        >
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_d"
            android:id="@+id/scrollView"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/l1_m"
                android:layout_margin="5dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/termsn_"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@drawable/chatbg"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/roboto"

                    />


                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/chat_recycler"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    ></android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:weightSum="10"
           android:padding="10dp"
            android:id="@+id/ll_d"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="vertical"
                android:id="@+id/container_linear"
                >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:hint="Enter Message"
                android:paddingLeft="10dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:id="@+id/edit_msg"
                android:lines="3"
                android:inputType="textMultiLine"
                android:maxLines="30"
                android:minLines="1"
                android:drawableRight="@drawable/ic_menu_camera"
                android:drawableTint="@color/grey"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                >
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_menu_send"
                    android:tint="@color/white"
                    android:padding="10dp"
                    android:id="@+id/btn_ok"
                    android:background="@drawable/round_solid"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
